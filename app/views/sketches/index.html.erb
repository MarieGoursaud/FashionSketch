<p id="notice"><%= notice %></p>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

<h1>Sketches</h1>
<table>
  <table class="table">

  <thead>
    <tr>
      <th>Image</th>
      <th>kind</th>
      <th>Date</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sketches.each do |sketch| %>
      <tr>
       
        <td><%= image_tag sketch.image, class: 'img-fluid'%></td>
        <td><%= sketch.kind %></td>
        <td><%= sketch.date %></td>
        <td><%= sketch.name %></td>
        <td><%= link_to 'Show', sketch %></td>
        <td><%= link_to 'Edit', edit_sketch_path(sketch) %></td>
        <td><%= link_to 'Destroy', sketch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sketch', new_sketch_path %>
